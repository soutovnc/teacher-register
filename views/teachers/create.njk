{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/teachers">
    <section 
        class="avatar" 
        style="background: url(https://source.unsplash.com/collection/10553730/500x500) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Novo Professor</h3>

        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input 
                    type="url" 
                    name="avatar_url" 
                    placeholder="http://"
                >
            </div>
        </div>

        <div class="item">
            <div>Professor</div>
            <div>
                <input 
                    type="text" 
                    name="name" 
                    placeholder="Seu nome"
                >
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                    type="date" 
                    name="birth"
                >
            </div>
        </div>

        <div class="item">
            <div>Grau de formação</div>
            <div>
                <input 
                    type="text" 
                    name="graduation" 
                    placeholder="Seu grau de formação?"
                >
            </div>
        </div>

        <div class="item">
            <div>Modalidade de aula</div>
            <div>
                <span><input type="radio" name="modality" value="P" checked>Presencial</span>
                <span><input type="radio" name="modality" value="D" >À distância</span>
                <span><input type="radio" name="modality" value="H" >Hibrido</span>
            </div>
        </div>

        <div class="item">
            <div>Especialidade</div>
            <div>
                <input 
                    type="text" 
                    name="area" 
                    placeholder="Qual sua área principal?"
                >
            </div>
        </div>
        <button type="submit">Salvar</button>

    </section>
</form>

{% endblock content %} 